<% include ../partials/header %>
<div class="ui main container">
  <div class="ui inverted segment">
    <h2 class="ui center aligned icon header">
      <i class="podcast icon blue"></i>
      <span class="ui header blue">Tech</span><span class="ui header grey">Share</span>
    </h2>
    <h3 class="ui header centered aligned">All techy stuff out here!</h3>
    <div class="ui header centered aligned">
        <a href="/content/new">
          <button  class="ui inverted blue button centered aligned">Add content</button>
        </a>

    </div>
  </div>
  <div class="ui three column grid" >
    <% articles.forEach((article) => { %>
      <div class="column">
        <div class="ui segments">
          <div class="ui segment inverted content">
            <div class="ui large  rounded image">
              <img src="<%= article.imageUrl %>" alt="Image" >
            </div>
            <div class="ui centered aligned header">
              <h4><%= article.name %></h4>
            </div>
            <p class="ui centered aligned header">
                <a href="/content/<%= article._id %>" class="ui inverted blue button centered aligned">More Info</a>
            </p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>





<% include ../partials/footer %>

